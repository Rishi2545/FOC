#include<stdio.h>
int main() {
   char op;
   double first,second;
   printf("enter an operator(+,-,*,/):");
   printf("%c",&op);
   printf("enter two operands:"),
   scanf("%lf %if", &first,&second);

   switch (op) {
   case'+':
     printf("%.1lf+%.1lf=%.1lf", first,second, first+second);
     break;
   case'-':
     printf("%.1lf-%.1lf=%.1lf", first,second, first-second);
     break;
   case'*':
     printf("%.1lf*%.1lf=%.1lf", first,second, first*second);
     break;
   case'/':
     printf("%.1lf*%.1lf=%.1lf", first,second, first/second);
     break;
   default:
     printf("Error! operator is not correct");
   }

   return 0;

}
